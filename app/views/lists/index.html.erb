
<div id="new_list_section">
  <%= link_to "New List", new_list_path, id: "newlist", class:"button u-full-width", remote: true if current_user%>
</div>

<div class="row">
<% @lists.each_with_index do |list, index| %>

    <div class="three columns">
      <%= link_to list.name, list %>
      <p> Finished <%= list.achieved_count %>/<%= list.total %> tasks. </p>
    </div>

      <% if index%4==3 %>
          </div>
          <div class="row">
      <% end %>


<% end %>

</div>
  <hr>
  <h5>Statistics:</h5>
  <ul>
    <li>Lists: <%= List.all.count %></li>
    <li>Tasks: <%= Task.all.count %>, finished: <%= Task.achieved_count %>, it's <%= Task.achieved_percent %>% of total!</li>
    <li>Users: <%= User.all.count %></li>
  </ul>